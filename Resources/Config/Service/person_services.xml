<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="openclassrooms.frontdesk.gateways.person" class="OpenClassrooms\FrontDesk\Repository\PersonRepository" public="false">
            <call method="setApiClient">
                <argument type="service" id="openclassrooms.frontdesk.client.api_client"/>
            </call>
        </service>

        <service id="openclassrooms.frontdesk.service.person" class="OpenClassrooms\FrontDesk\Services\Impl\PersonServiceImpl">
            <call method="setPersonGateway">
                <argument type="service" id="openclassrooms.frontdesk.gateways.person"/>
            </call>
        </service>

        <service id="openclassrooms.frontdesk.models.person_builder" class="OpenClassrooms\FrontDesk\Models\Impl\PersonBuilderImpl"/>
    </services>
</container>
